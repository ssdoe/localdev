{% macro menuItem(item) %}
  <li>
    {% if item.url %}
      <a href="{{ item.url }}" 
  {% if item.children %} aria-haspopup="true" {% endif %}
  class="{% if item.children %} menu-link {% else %} menu-link menu-list-link {% endif %}"
  >{{ item.name }}</a>
    {% else %}
      {{ item.name }}
    {% endif %}
    {% if item.children %}
      <ul class="menu menu-list">
        {% for item in item.children %}
          {{ menuItem(item) }}
        {% endfor %}
    </ul>
  {% endif %}
</li>
{% endmacro %}

{% set hasPopUp %}
{% if ltwo.children %}
menu-link mega-menu-link
{% else %}
"menu-link mega-menu-link"
{% endif %}
{% endset %}

<div class="nav">
<nav>
  <ul class="menu menu-bar">
    {% for lone in menu %}
      <li>
        <a class="menu-link mega-menu-link" href="javascript:void(0);" aria-haspopup="true">{{lone.name }}</a>
        <ul class="mega-menu">
          {% for ltwo in lone.children %}
            <li>
              <a class="menu-link mega-menu-link" href="javascript:void(0);" >{{ltwo.name}}</a>
            </li>
          {% endfor %}
        </ul>
      </li>
    {% endfor %}
  </ul>
</nav>
</div>

